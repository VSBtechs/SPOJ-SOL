#include <bits/stdc++.h>
using namespace std;
int main()
{
double l,ar;
double k[100];
int b=0;
a:
cin>>l;
ar=(l*l)/(2*3.14159265358979323846);
 
	cout.precision(2);
	cout << std::fixed;
	k[b]=ar;
	b++;
	if(l==0)
	{
		int i;
for(i=0;i<b-1;i++)
{
    cout<<k[i];	
    cout<<"\n";
}

	}
else 	goto a;


  return 0;
}
